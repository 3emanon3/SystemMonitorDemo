<Window x:Class="MonitorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MonitorApp"
        Title="System Resource Monitor" Height="450" Width="650"
        Background="#1e1e1e"
        ResizeMode="CanMinimize">
    
    <Window.DataContext>
        <local:SystemMonitorViewModel/>
    </Window.DataContext>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="SYSTEM RESOURCE MONITOR" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Foreground="#00D9FF" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,30"/>

        <!-- CPU Monitor -->
        <StackPanel Grid.Row="1" Margin="15">
            <TextBlock Text="CPU Usage" 
                       FontSize="20" 
                       Foreground="White" 
                       Margin="0,0,0,10"/>
            <ProgressBar Height="45" 
                         Value="{Binding CpuUsage}" 
                         Maximum="100" 
                         Foreground="#4CAF50" 
                         Background="#333333"
                         BorderBrush="#555555"
                         BorderThickness="1"/>
            <TextBlock Text="{Binding CpuUsage, StringFormat={}{0:F1}%}" 
                       FontSize="22" 
                       FontWeight="Bold"
                       Foreground="#4CAF50" 
                       HorizontalAlignment="Center" 
                       Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Memory Monitor -->
        <StackPanel Grid.Row="2" Margin="15">
            <TextBlock Text="Memory Usage" 
                       FontSize="20" 
                       Foreground="White" 
                       Margin="0,0,0,10"/>
            <ProgressBar Height="45" 
                         Value="{Binding MemoryUsage}" 
                         Maximum="100" 
                         Foreground="#FF9800" 
                         Background="#333333"
                         BorderBrush="#555555"
                         BorderThickness="1"/>
            <TextBlock Text="{Binding MemoryUsage, StringFormat={}{0:F1}%}" 
                       FontSize="22" 
                       FontWeight="Bold"
                       Foreground="#FF9800" 
                       HorizontalAlignment="Center" 
                       Margin="0,8,0,0"/>
        </StackPanel>

        <!-- System Uptime (from C++ DLL) -->
        <Border Grid.Row="3" 
                Background="#2a2a2a" 
                Padding="15" 
                Margin="0,20,0,0"
                CornerRadius="5">
            <StackPanel>
                <TextBlock Text="System Uptime (via C++ Interop):" 
                           FontSize="14" 
                           Foreground="#999999" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding Uptime}" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Foreground="#00D9FF" 
                           HorizontalAlignment="Center" 
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>