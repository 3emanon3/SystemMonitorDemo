<Window x:Class="MonitorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MonitorApp"
        Title="系统资源监控仪" Height="400" Width="600"
        Background="#1e1e1e">
    
    <Window.DataContext>
        <local:SystemMonitorViewModel/>
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" Text="系统资源监控" 
                   FontSize="28" FontWeight="Bold" 
                   Foreground="#00D9FF" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- CPU 监控 -->
        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock Text="CPU 使用率" FontSize="20" Foreground="White" Margin="0,0,0,10"/>
            <ProgressBar Height="40" Value="{Binding CpuUsage}" 
                         Maximum="100" 
                         Foreground="#4CAF50" 
                         Background="#333333"/>
            <TextBlock Text="{Binding CpuUsage, StringFormat={}{0:F1}%}" 
                       FontSize="18" Foreground="White" 
                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- 内存监控 -->
        <StackPanel Grid.Row="2" Margin="10">
            <TextBlock Text="内存使用率" FontSize="20" Foreground="White" Margin="0,0,0,10"/>
            <ProgressBar Height="40" Value="{Binding MemoryUsage}" 
                         Maximum="100" 
                         Foreground="#FF9800" 
                         Background="#333333"/>
            <TextBlock Text="{Binding MemoryUsage, StringFormat={}{0:F1}%}" 
                       FontSize="18" Foreground="White" 
                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- 底部信息（稍后显示 C++ 获取的开机时间）-->
        <TextBlock Grid.Row="3" 
                   Text="系统开机时间：（待 C++ 模块完成）" 
                   FontSize="14" Foreground="#888888" 
                   HorizontalAlignment="Center" Margin="0,20,0,0"/>
    </Grid>
</Window>